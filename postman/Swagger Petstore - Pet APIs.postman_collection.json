	"item": [
		{
			"name": "Create Pet - Positive",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is JSON\", () => {",
							"  pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
							"});",
							"",
							"pm.test(\"Response time is acceptable\", () => {",
							"  pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});",
							"",
							"const jsonData = pm.response.json();",
							"const expectedId = pm.variables.get(\"petId\");",
							"const expectedName = pm.variables.get(\"petName\");",
							"",
							"pm.test(\"Response contains required fields\", () => {",
							"  pm.expect(jsonData).to.have.property(\"id\");",
							"  pm.expect(jsonData).to.have.property(\"name\");",
							"  pm.expect(jsonData).to.have.property(\"status\");",
							"  pm.expect(jsonData).to.have.property(\"category\");",
							"  pm.expect(jsonData).to.have.property(\"photoUrls\");",
							"});",
							"",
							"pm.test(\"Returned id matches request id\", () => {",
							"  pm.expect(String(jsonData.id)).to.eql(expectedId);",
							"});",
							"",
							"pm.test(\"Returned name matches request\", () => {",
							"  pm.expect(jsonData.name).to.eql(expectedName);",
							"});",
							"",
							"pm.test(\"Status value is valid\", () => {",
							"  pm.expect([\"available\", \"pending\", \"sold\"]).to.include(jsonData.status);",
							"});",
							"",
							"pm.test(\"Category structure is valid\", () => {",
							"  pm.expect(jsonData.category).to.be.an(\"object\");",
							"  pm.expect(jsonData.category).to.have.property(\"id\");",
							"  pm.expect(jsonData.category).to.have.property(\"name\");",
							"});",
							"",
							"pm.test(\"photoUrls is a non-empty array\", () => {",
							"  pm.expect(jsonData.photoUrls).to.be.an(\"array\").that.is.not.empty;",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const timestamp = Date.now();\r",
							"\r",
							"pm.collectionVariables.set(\"petId\", String(timestamp));\r",
							"pm.collectionVariables.set(\"petName\", `Neo-Auto-${timestamp}`);\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id\": {{petId}},\n  \"category\": {\n    \"id\": 1,\n    \"name\": \"dog\"\n  },\n  \"name\": \"{{petName}}\",\n  \"photoUrls\": [\n    \"https://example.com/dog1.png\"\n  ],\n  \"tags\": [\n    {\n      \"id\": 1,\n      \"name\": \"automation\"\n    }\n  ],\n  \"status\": \"available\"\n}\n"
				},
				"url": {
					"raw": "{{baseUrl}}/pet",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"pet"
					]
				}
			},
